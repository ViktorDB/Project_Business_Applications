                    <TextBlock TextWrapping="Wrap" FontSize="20" FontWeight="Bold" Foreground="#FF398A97" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"><Run Language="nl-be" Text="Voeg stage toe"/></TextBlock>
                    <TextBox Text="{Binding InsertStageName}" Grid.Column="1" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="4" VerticalContentAlignment="Center"/>
                    <Label Content="Naam" Background="{x:Null}" Foreground="#FF398A97" FontSize="16" Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="1"/>
                    <Button Command="{Binding InsertStage}" Content="Voeg toe" Grid.ColumnSpan="2" Grid.Row="6" Grid.Column="1"/>
                    <TextBlock TextWrapping="Wrap" FontSize="20" FontWeight="Bold" Foreground="#FF398A97" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="1"><Run Language="nl-be" Text="Wijzig stage"/></TextBlock>

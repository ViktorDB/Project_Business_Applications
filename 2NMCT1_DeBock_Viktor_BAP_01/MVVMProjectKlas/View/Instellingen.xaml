                    <TextBox Text="{Binding InsertGenreName}" Grid.Column="1" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="4" VerticalContentAlignment="Center"/>
                    <Label Content="Naam" Background="{x:Null}" Foreground="#FF398A97" FontSize="16" Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="1"/>
                    <Button Command="{Binding InsertGenre}" Content="Voeg toe" Grid.ColumnSpan="2" Grid.Row="6" Grid.Column="1"/>
